<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ThermaSense Comparison Charts</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
    }
    .chart-container {
      width: 80%;
      margin: auto;
      padding: 20px;
    }
  </style>
</head>
<body>

  <h2>Indoor Temperature Comparison (User vs Non-user)</h2>
  <div class="chart-container">
    <canvas id="tempChart"></canvas>
  </div>

  <h2>Energy Cost Comparison (User vs Non-user)</h2>
  <div class="chart-container">
    <canvas id="costChart"></canvas>
  </div>

  <script>
    // Days (7 days)
    const labels = ["Day 1","Day 2","Day 3","Day 4","Day 5","Day 6","Day 7"];

    // Indoor temperature data (°C)
    const tempData = {
      labels: labels,
      datasets: [
        {
          label: "Non-user (Fixed 22°C)",
          data: [22, 22, 22, 22, 22, 22, 22],
          backgroundColor: "rgba(255, 99, 132, 0.7)"
        },
        {
          label: "User (Adaptive)",
          data: [24, 23.5, 25, 24.5, 26, 25, 24],
          backgroundColor: "rgba(54, 162, 235, 0.7)"
        }
      ]
    };

    // Cost data (RM)
    const costData = {
      labels: labels,
      datasets: [
        {
          label: "Non-user Cost",
          data: [12, 13, 12, 14, 15, 13, 14],
          backgroundColor: "rgba(255, 159, 64, 0.7)"
        },
        {
          label: "User Cost",
          data: [9, 10, 9.5, 11, 11.5, 10, 10.5],
          backgroundColor: "rgba(75, 192, 192, 0.7)"
        }
      ]
    };

    // Temperature chart
    new Chart(document.getElementById("tempChart"), {
      type: "bar",
      data: tempData,
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: "Indoor Temperature Comparison"
          }
        },
        scales: {
          y: {
            title: { display: true, text: "Temperature (°C)" }
          }
        }
      }
    });

    // Cost chart
    new Chart(document.getElementById("costChart"), {
      type: "bar",
      data: costData,
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: "Energy Cost Comparison"
          }
        },
        scales: {
          y: {
            title: { display: true, text: "Cost (RM)" }
          }
        }
      }
    });
  </script>

</body>
</html>
