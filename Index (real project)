  <script>
    // Days (7 days)
    const labels = ["Day 1","Day 2","Day 3","Day 4","Day 5","Day 6","Day 7"];

    // Indoor temperature data (Â°C)
    const tempData = {
      labels: labels,
      datasets: [
        {
          label: "Non-user (Fixed 22Â°C)",
          data: [21, 21, 21, 21, 21, 21, 21],
          backgroundColor: "rgba(255, 99, 132, 0.7)"
        },
        {
          label: "User (Adaptive)",
          data: [24, 24.5, 25, 24.5, 26, 25, 24],
          backgroundColor: "rgba(54, 162, 235, 0.7)"
        }
      ]
    };

    // Cost data (RM)
    const costData = {
      labels: labels,
      datasets: [
        {
          label: "Non-user Cost",
          data: [2.15, 2.15, 2.15, 2.15, 2.15, 2.15, 2.15],
          backgroundColor: "rgba(255, 159, 64, 0.7)"
        },
        {
          label: "User Cost",
          data: [1.36, 1.23, 1.1, 1.23, 0.83, 1.1, 1.36],
          backgroundColor: "rgba(75, 192, 192, 0.7)"
        }
      ]
    };

    // Temperature chart
    new Chart(document.getElementById("tempChart"), {
      type: "bar",
      data: tempData,
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: "Indoor Temperature Comparison"
          }
        },
        scales: {
          y: {
            title: { display: true, text: "Temperature (Â°C)" }
          }
        }
      }
    });

    // Cost chart
    new Chart(document.getElementById("costChart"), {
      type: "bar",
      data: costData,
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: "Energy Cost Comparison (RM)"
          }
        },
        scales: {
          y: {
            title: { display: true, text: "Cost (RM)" }
          }
        }
      }
    });
  </script>

